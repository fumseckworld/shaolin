{
    "name": "imperium/imperium",
    "type": "library",
    "description": "A library to manage databases and to build websites more simply",
    "license": "GPL-3.0-or-later",
    "support": {
       "source": "https://git.fumseck.eu/cgit/imperium/"
    },
    "authors": [
        {
            "name": "Willy Micieli",
            "email": "micieli@glaposte.net"
        }
    ],
    "require": {
        "php": ">=7.1",
        "pragmarx/google2fa": "^2.0",
        "czproject/git-php": "^3.10",
        "sinergi/browser-detector": "^6.1",
        "intervention/image": "^2.4",
        "guzzlehttp/guzzle": "^6.3",
        "nesbot/carbon": "^1.22",
        "robmorgan/phinx": "^0.9.0",
        "ralouphie/mimey": "^1.0",
        "maximebf/debugbar": "^1.15",
        "predis/predis": "^1.1",
        "twig/twig": "^2.6",
        "vlucas/phpdotenv": "^3.1",
        "twig/extensions": "^1.5",
        "umpirsky/twig-gettext-extractor": "^1.3",
        "guzzlehttp/psr7": "^1.5",
        "symfony/http-foundation": "^4.2",
        "symfony/yaml": "^4.2",
        "swiftmailer/swiftmailer": "^6.1",
        "psr/http-server-middleware": "^1.0",
        "symfony/console": "^4.2"
    },
    "autoload-dev":{
        "psr-4":{
            "Testing\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "Imperium\\": "imperium/"
        },
        "files": [
            "helpers/helpers.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpro/grumphp": "^0.14.3",
        "fzaninotto/faker": "^1.7",
        "codedungeon/phpunit-result-printer": "^0.26.0",
        "filp/whoops": "^2.2",
        "symfony/var-dumper": "^4.1"
    },
    "scripts": {

        "post-install-cmd": [
            "cp config/app.example.yaml  config/app.yaml",
            "mkdir tmp && mkdir tmp/Command"
        ]

    }
}
